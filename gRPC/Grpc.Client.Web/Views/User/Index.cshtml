@model IEnumerable<UserDTO>

<div class="row">
    <div class="col-md-12">
        <div class="shadow p-1 mb-3 bg-white rounded"><center><h3>@ViewData["Title"]</h3></center></div>
        <p> <a asp-action="Create" class="btn btn-primary">New user</a></p>
    </div>
</div>
<table class="table">
    <thead class="thead-dark" style="text-align: center;">
        <tr>
            <th width="70px">
                №
            </th>
            <th>
                Full name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody style="text-align: center;">
        @{
            int counter = 0;

            foreach (var item in Model)
            {
                ++counter;
                <tr>
                    <td>
                        @counter
                    </td>
                    <td style="text-align: left;">
                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <th>
                        @Html.DisplayFor(modelItem => item.Age)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </th>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Info</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div>
    <input type="button" class="btn btn-dark" value="Back" onclick="history.back()">
</div>
